{
  "name": "synonymapp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node ./app.ts",
    "build": "tsc",
    "serve": "node dist/index.js",
    "dev": "nodemon",
    "test": "ts-mocha tests/*.ts"
  },
  "nodemonConfig": {
    "watch": [
      "./",
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node ./app.ts"
  },
  "mocha": {
    "extension": ["ts"],
    "node-option": ["experimental-specifier-resolution=node", "loader=ts-node/esm"],
    "loader": "ts-node/esm",
    "spec": "tests/*.test.ts",
    "timeout": "5000"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.7",
    "chai": "^4.3.10",
    "chai-http": "^4.4.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  }
}
